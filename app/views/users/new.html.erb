<div class="container">
  <h2 class="title">Регистрация</h2>

  <div class="mt">
    <%= form_with model: @user do |form| %>
      <p class="mb-sm"><%= form.label :name, "Ваше имя" %></p>
      <p class="mb"><%= form.text_field :name, class: "form-text-field" %></p>

      <p class="mb-sm"><%= form.label :nickname, "Никнейм" %></p>
      <p class="mb"><%= form.text_field :nickname, class: "form-text-field" %></p>

      <p class="mb-sm"><%= form.label :email %></p>
      <p class="mb"><%= form.text_field :email, class: "form-text-field" %></p>

      <p class="mb-sm"><%= form.label :password %></p>
      <p class="mb"><%= form.password_field :password, class: "form-text-field" %></p>

      <p><%= form.submit "Зарегистрироваться", class: "button button-main mt"%></p>
    <% end %>
  </div>
</div>